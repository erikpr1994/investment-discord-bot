{
  "name": "investment-discord-bot",
  "version": "1.0.0",
  "description": "A Discord bot to send investment data",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "14.x",
    "npm": "*"
  },
  "scripts": {
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "cm": "cz",
    "push": "cm && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erikpr1994/investment-discord-bot.git"
  },
  "author": "Erik Pastor Rios",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/erikpr1994/investment-discord-bot/issues"
  },
  "homepage": "https://github.com/erikpr1994/investment-discord-bot#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint": "^7.20.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "npm": "^7.5.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
